@model MovieViewModel
@{
    ViewBag.Title = "Editar Película";
}
<div>
    <h4>Editar Película</h4>
    <div>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name">Nombre</label>
                <input type="text" asp-for="Name" class="form.control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender">Género</label>
                <input type="text" asp-for="Gender" class="form.control">
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <input type="submit" class="btn btn-primary" value="Guardar">
            <a asp-controller="App" asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>

    </div>
</div>